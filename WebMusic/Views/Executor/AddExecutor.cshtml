@model WebMusic.BLL.DTO.ExecutorDTO

@{
    ViewBag.Title = "Create Executor";
    // Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="formDiv">
    <h1>@Resources.Resource.AddExecutor</h1>

    <form asp-action="AddExecutor" method="post" enctype="multipart/form-data">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="inputTextBox">
            <label asp-for="Name" class="label">@Resources.Resource.Name</label>
            <input asp-for="Name" class="allInput" />
            <span asp-validation-for="Name" class="validation"></span>
        </div>

        <div>
            <input type="submit" value="@Resources.Resource.Add" class="submitButton" />
        </div>
    </form>
</div>
<a class="label" style="color: white" asp-area="" asp-controller="Executor" asp-action="AllExecutors">@Resources.Resource.BackToList</a>