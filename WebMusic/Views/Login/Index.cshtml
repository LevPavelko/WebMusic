@model WebMusic.Models.LoginModel

@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<div class="formDiv">
    <h1>Login</h1>
    <form asp-action="Login">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="inputTextBox">
            <label asp-for="Login" class="label"></label>
            <input asp-for="Login" class="allInput" />
            <span asp-validation-for="Login" class="validation"></span>
        </div>
        <div class="inputTextBox">
            <label asp-for="Password" class="label"></label>
            <input asp-for="Password" class="allInput" />
            <span asp-validation-for="Password" class="validation"></span>
        </div>
        <div class="form-group">
            <input type="submit" value="Login" class="submitButton" />
        </div>
      
    </form>
   
</div>
<label class="label" style="color: white">Не зарегестрированны?</label>
<a class="label" style="color: white" asp-area="" asp-controller="Register" asp-action="Index">Зарегестрироваться</a>


