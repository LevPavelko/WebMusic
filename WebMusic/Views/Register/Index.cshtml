@model WebMusic.Models.RegisterModel

@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="formDiv">
    <h1>Register</h1>
    <form asp-action="Register">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="inputTextBox">
            <label asp-for="FirstName" class="login-label"></label>
            <input asp-for="FirstName" class="login-input" />
            <span asp-validation-for="FirstName" class="validation"></span>

        </div>
        <div class="inputTextBox">
            <label asp-for="LastName" class="login-label"></label>
            <input asp-for="LastName" class="login-input" />
            <span asp-validation-for="LastName" class="validation"></span>
        </div>
        <div class="inputTextBox">
            <label asp-for="Login" class="login-label"></label>
            <input asp-for="Login" class="login-input" />
            <span asp-validation-for="Login" class="validation"></span>
        </div>
        <div class="inputTextBox">
            <label asp-for="Email" class="login-label"></label>
            <input asp-for="Email" class="login-input" />
            <span asp-validation-for="Email" class="validation"></span>
        </div>
        <div class="inputTextBox">
            <label asp-for="Password" class="login-label"></label>
            <input asp-for="Password" class="login-input" />
            <span asp-validation-for="Password" class="validation"></span>
        </div>
        <div class="inputTextBox">
            <label asp-for="PasswordConfirm" class="login-label"></label>
            <input asp-for="PasswordConfirm" class="login-input" />
            <span asp-validation-for="PasswordConfirm" class="validation"></span>
        </div>
        <div class="form-group">
            <input type="submit" value="Register" class="submitButton" />
        </div>

    </form>

</div>
<label class="login-label" style="color: white">Уже есть аккаунт?</label>
<a class="login-label" style="color: white" asp-area="" asp-controller="Login" asp-action="Index">Войти</a>
