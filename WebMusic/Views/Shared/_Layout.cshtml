<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WebMusic</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/style.css" asp-append-version="true" />
    
    <link rel="stylesheet" href="~/WebMusic.styles.css" asp-append-version="true" />
</head>
<body>
    <header >
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light border-bottom box-shadow mb-3" style=" background-color: #9E9E9E; margin: 0; border: none;">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index"><img src="/images/note2.png" width="45px" height="45px" /></a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">

                    <ul class="navbar-nav flex-grow-1">
                        @if (Context.Session.GetInt32("Status") == 3)
                        {

                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">@Resources.Resource.Home</a>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Media" asp-action="CreateMedia">@Resources.Resource.CreateMedia</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Genre" asp-action="AllGenres">@Resources.Resource.Genres</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Genre" asp-action="PostGenre">@Resources.Resource.AddGenre</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Executor" asp-action="AddExecutor">@Resources.Resource.AddExecutor</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Executor" asp-action="AllExecutors">@Resources.Resource.Executors</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="User" asp-action="AllUsers">@Resources.Resource.Users</a>
                            </li>
                         

                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Media" asp-action="Searching">@Resources.Resource.Search</a>
                            </li>

                          
                            <li style="margin-left: auto; margin-top: 5px;">
                                <a asp-area="" asp-controller="User" asp-action="userProfile"> <img src="/images/4519678.png" width="25px" height="25px" /></a>
                               
                            </li>
                            

                        }
                        else if(Context.Session.GetInt32("Status") == 2)
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">@Resources.Resource.Home</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Media" asp-action="CreateMedia">@Resources.Resource.CreateMedia</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Media" asp-action="Searching">@Resources.Resource.Search</a>
                            </li>
                            <li style="margin-left: auto; margin-top: 5px;">
                                <a asp-area="" asp-controller="User" asp-action="userProfile"> <img src="/images/4519678.png" width="25px" height="25px" /></a>

                            </li>
                           

                        }

                        else if (Context.Session.GetInt32("Status") == 1)
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">@Resources.Resource.Home</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Media" asp-action="Searching">@Resources.Resource.Search</a>
                            </li>
                            <li style="margin-left: auto; margin-top: 5px;">
                                <a asp-area="" asp-controller="User" asp-action="userProfile"> <img src="/images/4519678.png" width="25px" height="25px" /></a>

                            </li>
                           

                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Media" asp-action="Searching">@Resources.Resource.Search</a>
                            </li>
                            <a class="nav-link text-dark" style="margin-left: auto;" asp-area="" asp-controller="Login" asp-action="Index">@Resources.Resource.Login</a>
                        }
                       
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div style="margin:20px">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    @* <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - WebMusic - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer> *@
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/JavaScript.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
